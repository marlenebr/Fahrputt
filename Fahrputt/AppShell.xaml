<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Fahrputt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Fahrputt">
    <TabBar>
        <ShellContent
            Title="Current Station Alerts"
            Icon="iconmonstr_star_filled_32.png"
            ContentTemplate="{DataTemplate local:StationsMainPage}"
            Route="StationsMainPage" />

    <ShellContent
            Title="Favorites"
            Icon="iconmonstr_star_filled_32.png"
            ContentTemplate="{DataTemplate local:FavoritesPage}"
            Route="FavoritesPage" />
    </TabBar>
</Shell>
